<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#818b87"
    tools:context="com.angelo.gwacalculator.StartMenu">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner1">

    </com.google.android.gms.ads.AdView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner2"></com.google.android.gms.ads.AdView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adView"
        android:layout_marginTop="10sp"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_pslogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ps_logo" />

        <Button
            android:id="@+id/btn_gocalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_pslogo"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:text="Calculate your GWA Now!"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_pslogo"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:text="Exit"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>
